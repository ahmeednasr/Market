<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.CategoriesFragment">

    <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:toggle_horizontalSpacing="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:justifyContent="center">

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:paddingHorizontal="8dp"
            app:toggle_selectAnimation="horizontal_slide"
            app:toggle_selectedBackgroundColor="@color/orange_500"
            app:toggle_selectedTextColor="@color/white"
            app:toggle_text="WOMEN" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:paddingHorizontal="8dp"
            app:toggle_selectAnimation="horizontal_slide"
            app:toggle_selectedBackgroundColor="@color/orange_500"
            app:toggle_selectedTextColor="@color/white"
            app:toggle_text="KID" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:paddingHorizontal="8dp"
            app:toggle_selectAnimation="horizontal_slide"
            app:toggle_selectedBackgroundColor="@color/orange_500"
            app:toggle_selectedTextColor="@color/white"
            app:toggle_text="MEN" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:paddingHorizontal="8dp"
            app:toggle_selectAnimation="horizontal_slide"
            app:toggle_selectedBackgroundColor="@color/orange_500"
            app:toggle_selectedTextColor="@color/white"
            app:toggle_text="SALE" />

    </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#EFEEED"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@+id/category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>